@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="jumbotron p-4 bg-light rounded">
        <h1>Login</h1>
        <form action="/api/users/login" method="POST" autocomplete="on">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input class="form-control" name="Username" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input class="form-control" type="password" name="PasswordHash" required />
            </div>
            <input type="submit" class="btn btn-primary" value="Login" />
            <br/><br/>
            <p class="mt-3">Don't have an account? <a href="/Join">Sign up here</a></p>
        </form>
    </div>
</div>
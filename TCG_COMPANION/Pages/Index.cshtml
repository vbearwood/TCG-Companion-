@page
@model TCG_COMPANION.Pages.IndexModel
@{
    ViewData["Title"] = "TCG_Companion";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pokemon.css" />
</head>
<body class="text-center" style="background-color:#2c2c2c; color:#f5f5f5;">
    @await Html.PartialAsync("_Navbar")  
    <div class="container py-5">
        <h1 class="display-4 mb-5 text-primary">Welcome To TCG Companion</h1>

        @if(User?.Identity?.IsAuthenticated ?? false && !string.IsNullOrEmpty(Model.DisplayName)) {
            <p class = "text-light mb-4"> Welcome @Model.DisplayName</p>
        }
        else{
            <p class = "text-light mb-4"> Please Sign In!</p>
        }

        <div class="d-inline-flex align-items-center justify-content-center mb-5 gap-3">
            <img src="~/img/201-v-2534047325.png" alt="Unown V" class="unownv" />
            <img src="~/img/pokemon-logo.png" alt="PokÃ©mon Logo" class="logo" />
            <img src="~/img/unown-j-918977700.png" alt="Unown J" class="unownj" />
        </div>

        @if(User?.Identity?.IsAuthenticated ?? false) {
            <div class="d-flex justify-content-center gap-4">
                <a asp-page="/Deck" class="btn btn-primary btn-lg px-4 shadow">Start a Deck</a>
                <a asp-page="/Collection" class="btn btn-warning btn-lg px-4 shadow text-dark fw-bold">Start a Collection</a>
                <a asp-page="/UserProfile" class="btn btn-success btn-lg px-4 shadow text-dark fw-bold">View Profile</a>
            </div>
            <div class="d-flex justify-content-center gap-4">
                <a asp-page="/Message" class="btn btn-primary btn-lg px-4 shadow">Join the Chatroom</a>
            </div>
        }

        else {
            <div class="d-flex justify-content-center gap-4">
                <a asp-page="/Login" class="btn btn-primary btn-lg px-4 shadow">Login to Start</a>
                <a asp-page="/Join" class="btn btn-warning btn-lg px-4 shadow text-dark fw-bold">Join Now</a>
            </div>
        }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
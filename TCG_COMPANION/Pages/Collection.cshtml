@page 
@model TCG_COMPANION.Pages.CollectionModel
@{
    ViewData["Title"] = "Your Deck - TCG Companion";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/pokemon.css" />
</head>

<body class="text-center" style="background-color:#2c2c2c; color:#f5f5f5;">
    <h1>Welcome To Your Collection</h1>

    <div class="d-inline-flex align-items-center justify-content-center mb-4 gap-3">
        <img src="~/img/201-v-2534047325.png" alt="Unown V" class="unownv" />
        <img src="~/img/pokemon-logo.png" alt="PokÃ©mon Logo" class="logo" />
        <img src="~/img/unown-j-918977700.png" alt="Unown J" class="unownj" />
    </div>
    <section class="image-matrix" aria-live="polite">
        @if (Model.Collection?.Cards != null)
        {
            foreach (var card in Model.Collection.Cards)
            {
                <div class="card-container">
                    <img src="@card.Image" alt="@card.Name" class="img-fluid Gallery" />
                    @if (!string.IsNullOrWhiteSpace(card.Prices))
                    {
                        <p><strong class="price-tag">$@card.Prices</strong></p>
                    }
                </div>
            }
        }
    </section>
    <div>
    <form method="post" asp-page-handler="AddCard" class="table-responsive" autocomplete="off">
        <table class ="table table-dark table-striped alighn-middle">
            <thead>
                <tr>
                    <th scope="col">Pokemon Name</th>
                    <th scope="col">Card Set</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @Html.AntiForgeryToken()
                    <td><input id="cardName" name="CardName" class="form-control" required /></td>
                    <td><input id="setName" name="SetName" class="form-control" required /></td>
                    <td><button type="submit" class="btn btn-primary">Add Card</button></td>
                </tr>
            </tbody>
        </table>
    </form>
        <form method = "post" asp-page-handler="DeleteCard" class="table-responsive" autocomplete="off">
        <table class ="table table-dark table-striped alighn-middle">
            <thead>
                <tr>
                    <th scope="col">Pokemon Name</th>
                    <th scope="col">Card Set</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @Html.AntiForgeryToken()
                    <td><input id="cardName" name="CardName" class="form-control" required /></td>
                    <td><input id="setName" name="SetName" class="form-control" required /></td>
                    <td><button type="submit" class="btn btn-warning">Delete Card</button></td>
                </tr>
            </tbody>
        </table>
    </form>
        <form method="post" asp-page-handler="ClearDeck">
            @Html.AntiForgeryToken()
            <div class ="text-center mt-3">
                <button type="submit" class="btn btn-danger postion-relative">Clear Deck</button>
            </div>
        </form> 
    </div>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src = "~/js/gallery.js" asp-append-version="true"></script>
</body>
</html>

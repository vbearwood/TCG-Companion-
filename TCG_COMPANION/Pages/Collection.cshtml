@page 
@model TCG_COMPANION.Pages.CollectionModel
@{
    ViewData["Title"] = "Your Deck - TCG Companion";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/pokemon.css" asp-append-version="true" />
</head>

<body class="text-center" style="background-color:#2c2c2c; color:#f5f5f5;">
    <h1>Welcome To Your Collection</h1>

    <div class="d-inline-flex align-items-center justify-content-center mb-4 gap-3">
        <img src="~/img/201-v-2534047325.png" alt="Unown V" class="unownv" />
        <img src="~/img/pokemon-logo.png" alt="PokÃ©mon Logo" class="logo" />
        <img src="~/img/unown-j-918977700.png" alt="Unown J" class="unownj" />
    </div>
    <section class="image-matrix" aria-live="polite">
        @if (Model.Collection?.Cards != null && Model.Collection.Cards.Any())
        {
            foreach (var card in Model.Collection.Cards)
            {
                <div class="card-container">
                    <img src="@card.Image" alt="@card.Name" class="img-fluid Gallery" />
                    @if (!string.IsNullOrWhiteSpace(card.Prices))
                    {
                        <p><strong class="price-tag">$@card.Prices</strong></p>
                    }
                </div>
            }
        }
    </section>
    <div class="jumbotron py-4 search" style="background-color:#000000;">
        <form method="post" asp-page-handler="AddCard" class="container" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="cardName" class="form-label">Pokemon Name</label>
                <input id="cardName" name="CardName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="setName" class="form-label">Set</label>
                <input id="setName" name="SetName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="cardNumber" class="form-label">Number</label>
                <input id="cardNumber" name="CardNumber" class="form-control"/>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Card</button>
            </div>
        </form>
        <form method="post" asp-page-handler="ClearCollection">
            @Html.AntiForgeryToken()
            <div class ="text-center mt-3">
                <button type="submit" class="btn btn-danger postion-relative">Clear Collection</button>
            </div>
        </form> 
    </div>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src = "~/js/gallery.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {gallery();});
    </script>
</body>
</html>
